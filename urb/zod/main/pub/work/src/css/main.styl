//
// fonts first
//

@import 'fonts'

html
body
  font-family "bau"
  font-size 18px

#c
  position absolute
  top 0rem
  left 50%
  width 58rem
  margin-left -29rem
  margin-bottom 12rem

h1
  font-weight 500
  font-size 1.6rem
  letter-spacing .1rem
  text-transform capitalize

.list
  padding-left 2rem

.items
  min-width 2rem
  min-height 2rem
  margin-left -2rem

.item
  display block
  max-height 2rem
  overflow hidden
  margin-bottom .3rem
  -webkit-transition max-height .2s

.item.expand
  max-height 12rem
  -webkit-transition max-height .2s

.item .comments
  height 10rem
  margin-top 1rem
  margin-left 2rem

.item .sort
.item .title
.item .date
.item .tags
  line-height 2rem

.item .sort
  width 2rem
  font-size .6rem
  color #ccc
  text-align center

.item .title
  min-width 16rem

.item .date
  min-width 6rem

.item .tags
  min-width 6rem

.item .comp
  width 3rem
  opacity 0

.item .comp .a
  display block
  font-size .7rem
  font-weight 500
  line-height .9rem

.item.expand .comp
.item:hover .comp
  opacity 1

.item .caret-container
  padding-top .6rem
  margin-left 1rem

/* global */

.top
  vertical-align top
  
.ib
  display inline-block

.hidden
  display none

.caret
  width 0
  height 0
  border-top .3rem solid transparent
  border-right .3rem solid transparent
  border-bottom .3rem solid transparent
  border-left .3rem solid #000
  -webkit-transform rotate(0deg)
  -webkit-transform-origin 0 50%
  -webkit-transition -webkit-transform .2s

.expand .caret
  transform rotate(90deg)
  transform-origin 0 50%
  -webkit-transform rotate(90deg)
  -webkit-transition -webkit-transform .2s

.p
  cursor pointer

.a
  display inline
  cursor pointer
  text-decoration underline

.input
  outline none
  display inline-block
  min-width 1rem
  background-color #f9f9f9
  padding-left .1rem
  padding-right .1rem
  
.input:focus
  background-color #ededed